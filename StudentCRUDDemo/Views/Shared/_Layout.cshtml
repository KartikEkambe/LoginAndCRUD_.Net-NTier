<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student CRUD </title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
   
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        footer {
            margin-top: auto;
        }
    </style>



</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Students Info.", "Home", "Student", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @{
                    if (Session["Role"] != null)
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Home", "Student")</li>
                            <li>@Html.ActionLink("StudentList", "Index", "Student")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Student")</li>
                            <li>@Html.ActionLink("About", "About", "Student")</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Home", "Student")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Student")</li>
                            <li>@Html.ActionLink("About", "About", "Student")</li>
                        </ul>
                    }
                }

                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (Session["Role"] != null)
                        {
                            <li>@Html.ActionLink("Logout", "Logout", "User")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Login", "Login", "User")</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div >

        @RenderBody()
        </div>
        <hr />
    </div>
        <footer >
            <p class="text-center">&copy; @DateTime.Now.Year -All Rights Are Reserver</p>
        </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
